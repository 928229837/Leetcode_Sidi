class Solution(object):
    def twoSum(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """
        # Array
        """
        for i in range(len(nums)):
            for j in range(i+1,len(nums)):
                if nums[i] + nums[j] == target:
                    return [i,j]
                    
        return False
        """
        #Hash Table
        dic = {}
        # key is the number, value is the index
        for i in range(len(nums)):
            #check edge case
            if nums[i] in dic and nums[i]*2 == target:
                return [dic[nums[i]],i]
            dic[nums[i]] = i
            
        for num in dic:
            if target - num in dic:
                return [dic[num],dic[target-num]]
        
        return False
